<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- ✅ Exclude DataStore containing first launch and splash screen flags from cloud backups -->
        <!-- This ensures proper first-time experience after uninstall/reinstall -->
        <exclude domain="files" path="datastore/app_preferences.preferences_pb"/>
    </cloud-backup>
    <device-transfer>
        <!-- ✅ Also exclude from device-to-device transfers -->
        <exclude domain="files" path="datastore/app_preferences.preferences_pb"/>
    </device-transfer>
</data-extraction-rules>